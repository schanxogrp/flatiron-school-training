<h1>Listing pigs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Curly tail</th>
      <th>Age</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pigs.each do |pig| %>
      <tr>
        <td><%= pig.name %></td>
        <td><%= pig.curly_tail %></td>
        <td><%= pig.age %></td>
        <td><%= link_to 'Show', pig %></td>
        <td><%= link_to 'Edit', edit_pig_path(pig) %></td>
        <td><%= link_to 'Destroy', pig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

